<?xml version="1.0" encoding="UTF-8"?>

<!-- arch-tag: Description of keyboard shortcuts for the English DocBook manual
  -->

<sect1 id="quick-reference">
  <title>Keyboard Shortcuts</title>

  <informaltable frame="none">
    <tgroup cols="2" colsep="0" rowsep="0">
    <colspec colname="COLSPEC0" colwidth="30*"/>
    <colspec colname="COLSPEC1" colwidth="70*"/>
    <tbody>

      <row>
        <entry>
<keycap>Ctrl</keycap><keycap>A</keycap>
	      </entry>
        <entry>
          <para>Select All</para>
        </entry>
      </row>

      <row>
        <entry>
<keycap>Ctrl</keycap><keycap>E</keycap>
        </entry>
        <entry>
          <para>Extract CD</para>
        </entry>
      </row>

      <row>
        <entry>
 <keycap>Ctrl</keycap><keycap>J</keycap>
        </entry>
        <entry>
          <para>Jump to playing song</para>
        </entry>
      </row>

      <row>
        <entry>
 <keycap>Ctrl</keycap><keycap>N</keycap>
        </entry>
        <entry>
          <para>New group</para>
        </entry>
      </row>
      <row>
        <entry>

  <keycap>Ctrl</keycap><keycap>O</keycap>
 

        </entry>
        <entry>
          <para>Add to library</para>
        </entry>
      </row>

      <row>
        <entry>

  <keycap>Ctrl</keycap><keycap>P</keycap>
 

        </entry>
        <entry>
          <para>Properties</para>
        </entry>
      </row>


      <row>
        <entry>

  <keycap>Ctrl</keycap><keycap>R</keycap>
 

        </entry>
        <entry>
          <para>Restart</para>
        </entry>
      </row>

      <row>
        <entry>

  <keycap>Ctrl</keycap><keycap>S</keycap>
 

        </entry>
        <entry>
          <para>Shuffle play</para>
        </entry>
      </row>

      <row>
        <entry>

  <keycap>Ctrl</keycap><keycap>W</keycap>
 

        </entry>
        <entry>
          <para>Exit &application;</para>
        </entry>
      </row>


      <row>
        <entry>

  <keycap>Ctrl</keycap><keycap>Space</keycap>
 

        </entry>
        <entry>
          <para>Play / Pause</para>
        </entry>
      </row>

      <row>
        <entry>

  <keycap>Ctrl</keycap><keycap>Left</keycap>
 

        </entry>
        <entry>
          <para>Previous Track</para>
        </entry>
      </row>

      <row>
        <entry>

  <keycap>Ctrl</keycap><keycap>Right</keycap>
 

        </entry>
        <entry>
          <para>Next Track</para>
        </entry>
      </row>

<row>
        <entry>

<keycap>F2</keycap>
 
        </entry>
        <entry>
          <para>Rename group</para>
        </entry>
      </row>

<row>
        <entry>

<keycap>F7</keycap>
 
        </entry>
        <entry>
          <para>Show/hide browser</para>
        </entry>
      </row>

<row>
        <entry>

<keycap>F8</keycap>
 
        </entry>
        <entry>
          <para>Toggle small display mode</para>
        </entry>
      </row>

<row>
        <entry>

<keycap>F9</keycap>
 
        </entry>
        <entry>
          <para>Show/hide side bar</para>
        </entry>
      </row>

    </tbody>
    </tgroup>
  </informaltable>
</sect1>
<sect1 id="multimedia-keys">
  <title>Multimedia Keys</title>

  <informaltable frame="none">
    <tgroup cols="2" colsep="0" rowsep="0">
    <colspec colname="COLSPEC0" colwidth="30*"/>
    <colspec colname="COLSPEC1" colwidth="70*"/>
    <tbody>

	<row>
        <entry>
	
	<keycap>Stop</keycap>
	 
        </entry>
        <entry>
        <para>Stops the player</para>
        </entry>
      	</row>

	<row>
        <entry>
	
	<keycap>Pause / Play</keycap>
	 
        </entry>
        <entry>
        <para>Pauses / Play the player</para>
        </entry>
      	</row>

	<row>
        <entry>
	
	<keycap>Prev</keycap>
	 
        </entry>
        <entry>
        <para>Plays the previous played track</para>
        </entry>
      	</row>

	<row>
        <entry>
	
	<keycap>Next</keycap>
	 
        </entry>
        <entry>
        <para>Plays the next track</para>
        </entry>
      	</row>

    </tbody>
    </tgroup>
  </informaltable>
</sect1>
